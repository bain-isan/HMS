@model HotelManagementSystem.Data.Rooms.RoomModel

@{
    ViewData["Title"] = "UpdateRoom";
    var list = new List<SelectListItem> { new SelectListItem { Text = "BedRoom", Value = "Bedroom" }, new SelectListItem { Text = "Hall", Value = "Hall" } };
}

<h1>Update Room Details</h1>

<h4>Room</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <div class="alert-success">@ViewBag.SuccessMsg</div>
        <div class="alert-danger">@ViewBag.ErrorMsg</div>
        <form asp-controller="Room" asp-action="UpdateCheck" method="post">
            <div class="form-group">
                <label name="number" class="control-label"></label>
                <input type="number" name="number" class="form-control" value="@{
                    if(Model != null)
                        @Model.Number
}
" />
                <span asp-validation-for="Room.RoomNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Search" class="btn btn-primary" />
            </div>
        </form>

        <form asp-action="UpdateRoom" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Room.Id" class="control-label"></label>
                <input asp-for="Room.Id" class="form-control" disabled />
                <span asp-validation-for="Room.Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Room.RoomNumber" class="control-label"></label>
                <input asp-for="Room.RoomNumber" class="form-control" />
                <span asp-validation-for="Room.RoomNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Room.RoomFloor" class="control-label"></label>
                <input asp-for="Room.RoomFloor" class="form-control" />
                <span asp-validation-for="Room.RoomFloor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Room.RoomType" class="control-label"></label>
                <input asp-for="Room.RoomType" class="form-control" />
                <span asp-validation-for="Room.RoomType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Room.MaxPersonAllowed" class="control-label"></label>
                <input asp-for="Room.MaxPersonAllowed" class="form-control" />
                <span asp-validation-for="Room.MaxPersonAllowed" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Room.Price" class="control-label"></label>
                <input asp-for="Room.Price" class="form-control" />
                <span asp-validation-for="Room.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
